// ==UserScript==
// @name         Fix Light/Dark Mode Formatting
// @namespace    http://tampermonkey.net/
// @version      2024-08-25-3
// @description  Removes Lightmode/Darkmode Background leftover from copy & pasting when on the other Mode
// @author       gaylie
// @match        https://xcreativeclashx.net/forums/*
// @icon         https://www.google.com/s2/favicons?sz=64&domain=xcreativeclashx.net
// @grant        none
// @run-at       document-idle
// @license      GNU AGPLv3
// @require      https://code.jquery.com/jquery-3.6.0.min.js
// ==/UserScript==


var lightHex = "#c6dfe1";
var lightRGB = "rgb(198,223,225)";
var darkHex = "#2d3037";
var darkRGB = "rgb(45,48,55)";

$('[style*="background-color:' + lightHex + '"], [style*="background-color:' + lightRGB + '"], [style*="background-color:' + darkHex + '"], [style*="background-color:' + darkRGB + '"]')
    .css({"background-color": "", "color": ""});

